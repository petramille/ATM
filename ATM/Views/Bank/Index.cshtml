<div class="row row-centered">
    <div class="col-md-6 col-md-offset-3">
        <h2>Account Summery</h2>
        <br />
        <br />
        <div class="list-group text-left">
            @foreach (var account in Model.account)
            {
                <a href="#" class="list-group-item select"><b>@account</b></a>
            }
        </div>
        <br />
        <br />
        <br />
        <div class="col-md-4">
            @using (Html.BeginForm("History", "Bank", FormMethod.Post))
            {
                <button id="HistoryButton" class="form-control" type="submit" name="submit"><b>Account History</b></button>
                <b><input id="History" class="form-control text-center" type="hidden" name="accountNumber" value=""/></b>
            }
        </div>
        <div class="col-md-4">
            <a class="form-control" style="background-color:red; color:white;" href="../Home/Done"><b>Log out</b></a>
        </div>
        <div class="col-md-4">
            @using (Html.BeginForm("Withdrawal", "Bank", FormMethod.Post))
            {
                <button id="WithdrawalButton" class="form-control" type="submit" name="submit"><b>Withdrawal</b></button>
                <b><input id="Withdrawal" class="form-control text-center" type="hidden" name="accountNumber" value=""/></b>
            }
        </div>
    </div>

</div>